inherit gnome2

DESCRIPTION="GNOME media player"
HOMEPAGE="http://www.gnome.org/projects/totem/"

PATCH_URI="2.26-plugins-no-undefined.patch"

PKG_NAMES="${PN} nautilus-${PN}"
PKG_HINTS="setup nautilus"
totem_CONTENTS='etc/ usr/bin/ usr/lib/lib* usr/lib/totem/ usr/share/'
nautilus_totem_CONTENTS='usr/lib/nautilus/'

CYGCONF_ARGS="
	--libexecdir=/usr/lib
	--disable-browser-plugins
	--enable-nautilus
	--without-hal
"
